<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainProfileActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_gravity="left|top"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:scaleType="fitCenter"
        android:src="@drawable/backbutton"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_icon"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="3dp"
            android:layout_marginBottom="15dp"/>

       <!-- <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginBottom="25dp"
            android:color="@android:color/transparent"
            android:src="@drawable/circle_img"/>
            android:background="@drawable/circle_img" -->

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switch3"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="Activity" />

        </LinearLayout>

        <!-- horizontal line -->
        <View
            android:layout_width="360sp"
            android:layout_height="2dip"
            android:background="#FF000000"
            android:layout_marginBottom="15sp"/>

        <TextView
            android:id="@+id/profile_user_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35sp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Current Classes: "
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <!-- TextView classes anchor point -->
        </LinearLayout>

        <!-- horizontal line -->
        <View
            android:layout_width="315dp"
            android:layout_height="2dip"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="#FF000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="COLLAB POINTS"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_collab_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32dp" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>